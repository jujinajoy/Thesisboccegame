    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#800080"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_below="@id/t"
        android:background="@drawable/rounded_white_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginStart="180dp"
    android:layout_marginEnd="180dp"
    android:padding="16dp">

        <TextView
            android:id="@+id/roundTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t"
            android:text="@string/round"
            android:textColor="#800080"
            android:textSize="38sp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/roundTextView"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/playerNameLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER NAME: "
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roundTextView"

            android:text=""
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/playerNameLabelTextView"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/ballColorLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BALL COLOUR: "
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ballColorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerNameTextView"
            android:textStyle="bold"
            android:text="ball_color"
            android:textColor="#000000"
            android:textSize="32sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ballColorTextView"
            android:layout_marginTop="75dp"
            android:text="@string/_60"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/scorecardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="36dp"
        android:text="@string/scorecard"
        android:textSize="28sp"
        android:visibility="gone" />

</RelativeLayout>
