<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new1">
    <!--

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_white_box"
        />
         -->

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="INSTRUCTIONS"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_below="@id/instructionTextView"
        android:background="@drawable/rounded_white_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="16dp">

        <TextView
            android:id="@+id/instruction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. To begin the game, 4 players are needed."
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/instruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Players can use either voice commands or can touch buttons .While using voice commands one player speak at a time."
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/instruction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Players has to enter their names in the playing order and has to select a ball colour."
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/instruction4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Only one player can throw the ball at a time."
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/instruction5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Stand next to the carpet to throw the ball."
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/instruction6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. The player who throw their ball much closer to the white ball will score more."
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#222222"
            android:textSize="25sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start Game"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:onClick="backButtonClicked"
        android:textSize="26sp"
        android:padding="36dp"/>

</RelativeLayout>
